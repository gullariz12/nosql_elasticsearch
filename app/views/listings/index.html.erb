<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Listings</h1>
  <h3>Choose Filter</h3>
  <div class="w-75">
    <%= form_tag(listings_path, method: :get, class: 'd-flex') do %>
      <%= text_field_tag 'query[beds_min]', nil, placeholder: 'beds min', class: 'form-control me-2' %>
      <%= text_field_tag 'query[beds_max]', nil, placeholder: 'beds max', class: 'form-control me-2' %>
      <%= text_field_tag 'query[baths_min]', nil, placeholder: 'baths min', class: 'form-control me-2' %>
      <%= text_field_tag 'query[baths_max]', nil, placeholder: 'baths max', class: 'form-control me-2' %>
      <%= text_field_tag 'query[price_min]', nil, placeholder: 'price min', class: 'form-control me-2' %>
      <%= text_field_tag 'query[price_max]', nil, placeholder: 'price max', class: 'form-control me-2' %>
      <%= submit_tag ('Search') %>
    <% end %>
  </div>

  <table>
    <thead>
      <tr>
        <th>Beds</th>
        <th>Baths</th>
        <th>Price</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @listings.each do |listing| %>
        <tr>
          <td><%= listing.beds %></td>
          <td><%= listing.baths %></td>
          <td><%= listing.price %></td>
          <td><%= link_to 'Show', listing %></td>
          <td><%= link_to 'Edit', edit_listing_path(listing) %></td>
          <td><%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Listing', new_listing_path %>
</div>
